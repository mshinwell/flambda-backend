#!/usr/bin/env bash

output="${program}".output
exec > ${output} 2>&1

mkdir readline-input
echo a > readline-input/testcase
export AFL_SKIP_CPUFREQ=1 AFL_FAST_CAL=1 AFL_NO_UI=1 AFL_BENCH_UNTIL_CRASH=1
timeout=timeout
# On macOS we expect gtimeout
which timeout > /dev/null || timeout=gtimeout
$timeout 10s afl-fuzz -m none -i readline-input -o readline-output ./readline > afl-output

n=$(grep "unique_crashes" readline-output/fuzzer_stats | cut -d ':' -f 2)
if [ "$n" -gt 0 ];
then
  echo "all tests passed";
  exit ${TEST_PASS}
else
  echo "failed:"
  cat afl-output
  exit ${TEST_FAIL};
fi
